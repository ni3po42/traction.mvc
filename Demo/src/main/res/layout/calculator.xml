<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5" android:columnCount="5"
            xmlns:mvvm="http://schemas.android.com/apk/res-auto"
            mvvm:IsRoot="true"
        >

    <TextView
            android:layout_height="100dip" android:layout_width="match_parent"
            android:layout_rowSpan="1"
            android:layout_columnSpan="5"
            android:layout_row="0" android:layout_column="0"
            android:gravity="right"
            mvvm:Text="Display"
            />


    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="1"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="2"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="1"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="3"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="2"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="4"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="5"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="1"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="6"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="2"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="7"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="8"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="1"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="9"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="2"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="."
            mvvm:OnClick="SwitchToDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="4" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="0"
            mvvm:OnClick="NumberUpdate" mvvm:CommandValue="@integer/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="4" android:layout_column="1"
            />


    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="+"
            mvvm:OnClick="Operation" mvvm:CommandValue="@id/calc.add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="3"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="X"
            mvvm:OnClick="Operation" mvvm:CommandValue="@id/calc.multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="4"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="-"
            mvvm:OnClick="Operation" mvvm:CommandValue="@id/calc.subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="3"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="/"
            mvvm:OnClick="Operation" mvvm:CommandValue="@id/calc.divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="4"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="clr"
            mvvm:OnClick="ClearDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="4" android:layout_column="3"
            />

    <Button
            android:layout_rowSpan="2" android:layout_columnSpan="1"
            android:text="="
            mvvm:OnClick="Operation" mvvm:CommandValue="@id/calc.equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="4"
            />


</GridLayout>