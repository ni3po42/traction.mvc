<resources>
    <!--
    Defines all the custom attributes to be used in layout and menu files 
     -->

    <attr name="IsVisible" format="string"  />
    <attr name="OnClick" format="string" />
    <attr name="IsBindable" format="boolean" />
    <attr name="IsChecked" format="string" />
    <attr name="MinValue" format="string" />
    <attr name="MaxValue" format="string" />
    <attr name="Value" format="string" />
    <attr name="SelectedDate" format="string" />
    <attr name="MinDate" format="string" />
    <attr name="MaxDate" format="string" />

    <declare-styleable name="meta">
        <attr name="name" format="string" />
        <attr name="path" format="string" />
        <attr name="stringValue" format="string" />
        <attr name="boolValue" format="boolean" />
        <attr name="intValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="Menu">
        <attr name="IsVisible"  />
        <attr name="OnClick" />
        <attr name="IsBindable" />
    </declare-styleable>

    <declare-styleable name="View">
        <attr name="IsRoot" format="boolean" />
        <attr name="IsVisible" />
        <attr name="BindingType" format="string" />
        <attr name="GenericBindings" format="string" />
        <attr name="IsBindable" />
        <attr name="IgnoreChildren" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="Text" format="string" />
        <attr name="Format" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="Button">
        <attr name="IsBindable" />
        <attr name="OnClick" />
        <attr name="OnLongClick" format="string" />
    </declare-styleable>

    <declare-styleable name="Toggle">
        <attr name="IsBindable" />
        <attr name="IsChecked" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="IsBindable" />
        <attr name="IsChecked" />
    </declare-styleable>

    <declare-styleable name="AdapterView">
        <attr name="SelectedItem" format="string" />
        <attr name="Items" format="string" />
        <attr name="ItemTemplate" format="reference" />
    </declare-styleable>

    <declare-styleable name="ListView">
        <attr name="Selected" format="string" />
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="Image" format="string" />
    </declare-styleable>

    <declare-styleable name="NumberPicker">
        <attr name="MinValue" />
        <attr name="MaxValue" />
        <attr name="Value" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="MaxValue" />
        <attr name="Value" />
        <attr name="IsIndeterminate" format="string" />
    </declare-styleable>

    <declare-styleable name="SeekBar">
        <attr name="OnDragStart" format="string" />
        <attr name="OnDragEnd" format="string" />
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <attr name="SelectedDate" />
        <attr name="MinDate" />
        <attr name="MaxDate" />
    </declare-styleable>

    <declare-styleable name="TimePicker">
        <attr name="SelectedTime" format="string" />
    </declare-styleable>

    <declare-styleable name="DatePicker">
        <attr name="SelectedDate" />
        <attr name="MinDate" />
        <attr name="MaxDate" />
    </declare-styleable>
</resources>